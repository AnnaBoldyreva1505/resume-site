---
const { t = {} } = Astro.props;
---

<section id="experience" class="py-16 bg-gray-50 text-black lg:pl-[250px] px-4 sm:px-6">
  <!-- Заголовок -->
  <div class="text-center mb-12 relative">
    <hr class="border-t border-dashed border-pink-400 mb-2" />
    <h2 class="inline-block text-2xl md:text-3xl font-bold text-pink-600 bg-gray-50 px-4 relative z-10 -mt-6">
      {t.experience?.sectionTitle || "Work Experience"}
    </h2>
  </div>

  <!-- Карточки -->
  <div class="max-w-5xl mx-auto space-y-8">
    {(t.experience?.jobs || []).map((job) => (
      <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-pink-500 hover:shadow-lg transition">
        <h3 class="text-xl font-bold text-pink-600">{job.title}</h3>
        <p class="text-sm text-gray-500 mb-2">{job.company} — {job.period}</p>
        <p class="text-gray-700">{job.description}</p>
      </div>
    ))}
  </div>
</section>
