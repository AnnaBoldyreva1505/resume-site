---
// src/components/Header.astro
const { current = 'en' } = Astro.props;
import LanguageDropdown from './LanguageDropdown.astro';
---

<header class="lg:hidden fixed top-0 left-0 w-full z-50 bg-[#231720] text-white shadow-md">
  <div class="flex items-center justify-between py-3">
    <a href="#home" class="text-lg font-bold uppercase tracking-wide">Anna</a>
    
    <div class="flex items-center space-x-4">
      <LanguageDropdown current={current} />
      
      <button
        onclick="
          document.getElementById('mobile-menu').classList.toggle('hidden');
        "
        class="focus:outline-none"
      >
        <svg class="w-6 h-6 fill-white" viewBox="0 0 24 24">
          <path
            d="M4 6h16M4 12h16M4 18h16"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </button>
    </div>
  </div>

  <nav id="mobile-menu" class="hidden pb-4 space-y-2 text-sm uppercase">
    {[
      { href: '#home', label: 'Home' },
      { href: '#about', label: 'About' },
      { href: '#skills', label: 'Skills' },
      { href: '#code-example', label: 'Code example' },
      { href: '#projects', label: 'Projects' },
      { href: '#education', label: 'Education' },
      { href: '#languages', label: 'Languages' }
    ].map((item) => (
      <a href={item.href} class="block py-1 text-white hover:text-pink-400 transition-colors duration-200">
        {item.label}
      </a>
    ))}
  </nav>
</header>
